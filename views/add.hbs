<h2>Add a new Employee</h2>

<form action="/add" method="post">
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="Username">
    <br>
    <label for="name">Name</label>
    <input id="name" type="text" name="name" placeholder="Name">
    <br>
    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Password">
    <br>
    <label for="profileImg">Profile Image</label>
    <input id="profileImg" type="text" name="profileImg" placeholder="Profile Image">
    <br>
    <label for="facebookId">Facebook</label>
    <input id="facebookId" type="text" name="facebookId" placeholder="Facebook ID">
    <br>
    <label for="role">Role</label>
    <input id="role" type="text" name="role" placeholder="Role">
    <br>

    {{#if errorMsg}}
        <div style="color: red">{{ message }}</div>
    {{/if}}
    <br>

    <button type="submit">Create account</button>
</form>